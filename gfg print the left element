class Solution{
    public:
    int leftElement(int a[], int n) {
        // Your code goes here 
        sort(a,a+n);
         //int m=n/2;
        for(int i=0;i<n;i++){
            if(n%2 != 0){
                return a[n/2];
            }
            else{
                return a[n/2-1];
            }
        }        
    }
};
